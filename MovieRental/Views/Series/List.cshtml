@model IEnumerable<MovieRental.Models.Series>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Series</h2>
<p>
    @Html.ActionLink("New Series", "New", "Series", null, new { @class = "btn btn-primary" })
</p>

<table id="series" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Season</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#series").dataTable({
                ajax: {
                    url: "/api/series",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, series) {
                            return "<a href='/series/edit/" + series.id + "'>" + series.name + "</a>";
                        }
                    },
                    {
                        data: "season"
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-series-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });


            $("#series").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this series?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/series/" + "/" + button.attr("data-series-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
                
            });
        });

    </script>
}
