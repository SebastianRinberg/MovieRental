@model IEnumerable<MovieRental.Models.Series>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Series</h2>
<table id="series" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Season</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#series").dataTable({
                ajax: {
                    url: "/api/series",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "season"
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });

    </script>
}
