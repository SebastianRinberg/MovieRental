@model MovieRental.ViewModels.DocumentariesFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm("Save", "Documentaries"))
{
    <div class="form-group">
        @Html.LabelFor(d => d.Name)
        @Html.TextBoxFor(d => d.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(d => d.DocumentaryGenreId)
        @Html.DropDownListFor(d => d.DocumentaryGenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(d => d.ReleaseDate)
        @Html.TextBoxFor(d => d.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(d => d.NumberInStock)
        @Html.TextBoxFor(d => d.NumberInStock, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(d => d.Id)
    @Html.AntiForgeryToken()
    <Button type="submit" class="btn btn-primary">Save</Button>
}
